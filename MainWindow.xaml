<Window x:Class="radio.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:radio"
        mc:Ignorable="d"
        Title="Radio" 
        Height="800" 
        Width="1200"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"></ColumnDefinition>
            <ColumnDefinition Width="2*"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="0" Grid.Column="0" Background="Gray">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                <ItemsControl Tag="items-control">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel HorizontalAlignment="Center" Margin="10"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 1</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 2</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 3</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 4</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 5</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 6</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 7</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 8</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 9</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 10</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 1</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 2</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 3</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 4</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 5</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 6</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 7</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 8</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 9</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 10</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 1</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 2</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 3</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 4</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 5</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 6</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 7</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 8</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 9</Button>
                    <Button Click="MessageBoxShow" Margin="5" Width="150" Height="150">Text 10</Button>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <Grid Grid.Row="0" Grid.Column="1" Background="DimGray"></Grid>
    </Grid>
</Window>
